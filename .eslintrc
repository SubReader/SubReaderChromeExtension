{
  "root": true,
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "@trejgun/eslint-config/presets/tsx"
  ],
  "globals": {
    "chrome": "readonly"
  },
  "rules": {
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignorePattern": "^\\s+d=\"" // ignore path in svg icons
      }
    ],
    "import/no-webpack-loader-syntax": 0,
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "webpack.config.js"
        ]
      }
    ]
  }
}
